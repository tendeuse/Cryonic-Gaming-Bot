<Window x:Class="ArcOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ArcOverlay"
        Width="480"
        Height="720"
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">
    <Grid Margin="12">
        <Border CornerRadius="8" Padding="12" Background="#CC0B1622" BorderBrush="#FF2A5E8A" BorderThickness="1">
            <StackPanel>
                <TextBlock FontSize="18" FontWeight="SemiBold" Text="ARC OVERLAY // STATE OPS" />
                <TextBlock FontSize="12" Margin="0,4,0,12" Text="F10 hide/show Â· F9 click-through" />

                <TextBlock FontSize="14" Text="Active Missions" />
                <ListBox ItemsSource="{Binding Missions}" Background="#66212C3A" BorderThickness="0" Margin="0,8,0,8">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,4,0,4" Padding="8" Background="#88456A8C">
                                <StackPanel>
                                    <TextBlock FontSize="13" FontWeight="Bold" Text="{Binding Title}" />
                                    <TextBlock TextWrapping="Wrap" FontSize="11" Text="{Binding Lore}" />
                                    <TextBlock FontSize="11" Text="{Binding ProgressText}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <TextBlock Text="Status:" FontWeight="Bold" />
                <TextBlock Text="{Binding Status}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
